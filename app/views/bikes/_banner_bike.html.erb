<%= stylesheet_link_tag("banner_bike")%>

<div class="container">
  <div class="row align-items-center justify-content-md-center">
    <% @bike.photos.each do |photo| %>
      <div class="col-4">
        <div class="d-flex justify-content-center" id="image-div">
          <%= cl_image_tag photo.key, height: 400, width: 400, crop: :fill %>
        </div>
      </div>
    <% end %>
  </div>
</div>
