<%= stylesheet_link_tag("bike_show")%>

<div class="parent container d-flex flex-column align-items-center h-100">
  <h1>Bike Details</h1>

  <%= render "banner_bike" %>

  <div class="container d-flex flex-column align-items-center h-100">
    <div class="d-flex felx-row bike-info">
      <div class="d-flex flex-column align-items-center justify-content-center">
        <p>Category</p>
        <span><%= @bike.category %></span>
      </div>
    </div>

    <div class="d-flex felx-row bike-info">
      <div class="d-flex flex-column align-items-center justify-content-center">
        <p>Location</p>
        <span><%= @bike.location %></span>
      </div>
    </div>

    <div class="d-flex felx-row bike-info">
      <div class="d-flex flex-column align-items-center justify-content-center">
        <p>Condition</p>

        <% condition = "<i class='fa-solid fa-star' style='color: #05b470;'></i>".html_safe %>
          <p class="card-text"><%= condition * @bike.condition  %></p>
      </div>
    </div>

    <div class="d-flex felx-row bike-info">
      <div class="d-flex flex-column align-items-center justify-content-center">
        <p>Price per Day</p>
        <span><%= number_to_currency(@bike.price_per_day, unit: "Â£") %></span>
      </div>
    </div>
  </div>

  <div class="container">
    <span id="nav-btn">
      <span id="back-btn"><%= link_to 'Back', bikes_path %></span>
      <span class="d-flex align-items-center justify-content-center" id="edit-btn"><%= link_to 'Edit', edit_bike_path(@bike) %></span>
    </span>
  </div>
</div>
