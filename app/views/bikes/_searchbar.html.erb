<div class="searchbar-container">
  <%= form_with url: bikes_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :search_by_category,
      params[:search_by_category],
      class: "form-control",
      placeholder: "Type of bike"
      %>
    <%= text_field_tag :search_by_location,
      params[:search_by_location],
      class: "form-control",
      placeholder: "Location"
      %>
    <%= submit_tag "Search", name: "", class: "" %>
  <% end %>
</div>
