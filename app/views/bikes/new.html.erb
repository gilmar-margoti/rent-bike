<h1>Create a new bike to rent</h1>
<%= simple_form_for @bike do |form| %>
  <%= form.error_notification %>

  <div class="form-inputs">
    <%= form.input :category %>
    <%= form.input :location %>
    <%= form.input :condition %>
    <%= form.input :price_per_day %>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', bikes_path %>
