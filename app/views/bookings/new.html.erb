<%= stylesheet_link_tag("booking_new")%>
<div class="container">

  <h4 class="card-title mt-3"> Book your bike: <%=  @bike.category %></h4>
    <div class="back-link">
    <p><%= link_to 'Back to all bikes', bikes_path %></p>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <div class="card p-2 m-2 card-booking">
      <% if @bike.photos.attached? %>
          <%= cl_image_tag @bike.photos.first.key, class:"card-img-top" %>
        <% else %>
          <img src="https://coloringonly.com/images/imgcolor/Free-Bicycle-coloring-page.jpg" class="card-img-top" alt="Bike image">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= @bike.location %></h5>
          <p class="card-text">Price per Day: Â£<%= @bike.price_per_day %></p>
          <p class="card-text">Category: <%= @bike.category %></p>
          <% condition = "<i class='fa-solid fa-star' style='color: #05b470;'></i>".html_safe %>
          <p class="card-text">Condition: <%= condition * @bike.condition  %></p>
          <%= link_to 'View Details', bike_path(@bike), class:'btn' %>
        </div>
      </div>
    </div>
    <div class="col-sm-12 col-md-6">
      <div class="card p-2 m-2 card-booking">
      <h5>Pick your dates!</h5>
        <div class="form">
          <%= simple_form_for [@bike, @booking] do |f| %>
            <%= f.input :start_date %>
            <%= f.input :end_date%>
            <%= f.submit "Book", class: 'btn btn-flat' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
