<%= stylesheet_link_tag("booking_show")%>
<div class="booking-card-container">
  <h1>Your bike is booked!</h1>
<%# Booking card info  %>
  <div class="row">
    <div class="col-md-4 mb-4">
      <div class="card m-2 card-bike">
        <div class="card-body ">
          <h5 class="card-title"> Booking ref: #RAB24<%=  @booking.id %></h5>
          <p class="card-text">Pick Up: <%= @booking.start_date%> </p>
          <p class="card-text">Drop off: <%= @booking.end_date%> </p>
          <% days = @booking.end_date - @booking.start_date %>
          <%= days %>
          <p class="card-text">Total: Â£<%= @bike.price_per_day %></p>

          <%= link_to 'See all my bookings', bike_bookings_path, class: 'btn btn-flat' %>

        </div>
      </div>
    </div>
</div>
<div class="back-link">
  <%= link_to 'Back to bikes', bikes_path %>
</div>
